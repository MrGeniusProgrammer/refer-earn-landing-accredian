{
	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "none",
	"printWidth": 80,
	"tabWidth": 4,
	"semi": true,
	"importOrder": [
		"^@/lib/(.*)$",
		"^@/lib/entities/(.*)$",
		"^@/lib/use-cases/(.*)$",
		"^@/lib/data-access/(.*)$",
		"^@/lib/components/(.*)$",
		"^@/lib/components/ui/(.*)$",
		"^[./]"
	],
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
